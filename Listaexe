programa {
	funcao inicio() {
		
		real preco, novo, desconto
		
		escreva ("Insira o preço da cerveja: ", "$ ")
		leia (preco)
		
		novo = preco - 0.10
		
		escreva("Agora sua cerveja custa: ", novo)
	}
}


7.

programa {
	funcao inicio() {
	    real frango, unidade
	  	    
		escreva ("TEC FRANGO\n\n")
			
		escreva ("Insira o número de frangos que possui? ", "unidades ")
		leia (unidade)

		frango = 7.5 * unidade
		

		escreva("\n\nA Tec Frango vai gastar na granja, um valor de: ", frango, "$ \n\n")

		escreva("FIM")	
	}
}

8.

programa {
	funcao inicio() {
		escreva ("GostoSoft LANCHONETE\n")
		
		real sanduiches, q, p, h
		
		
		escreva ("\nInsira a quantidade de sanduiches que deseja preparar:", " Unidades ")
		leia (sanduiches)
		
		q = 0.10 * sanduiches // a partir de 10, temos 1 kg
		p = 0.05 * sanduiches // a partir de 20, temos 1 kg
		h = 0.10 * sanduiches // a partir de 10, temos 1 kg
		
		escreva("\nA quantidade em KG de ingredientes que será preciso, respectivamente é de:\n", q , " KG QUEIJO\n", p , " KG PRESUNTO\n", h , " KG HAMBURGUERES ","\n\nf i m  !")
		leia (q, p, h)
	}
}

o fim ficou na mesma linha porque precisa ser declarado no escopo, e se não tem como colocar nome em numero real, insiriu na mesma linha do problema

9.

programa
{
	
	funcao inicio()
	{
		inteiro camisetas, p, m, g, resultado
		
		escreva("Digite quantas camisetas você quer: \n")
		leia (camisetas)
	
		escreva("Quantas são PEQUENA: \n")
		leia (p)
		escreva("Quantas são MEDIA: \n")
	    	leia (m)
		escreva("Quantas são GRANDE \n")
		leia (g)
		
		resultado = (p *10) + (m * 12) + (g * 15)
		
		escreva ("O valor de sua compra tem o total de $ ", resultado)
		leia (resultado)

	}
}


10.

programa
{
	
	funcao inicio()
	{
		escreva("Brechó\n\n")
		
		real custo, v1, v2
		escreva("Quanto custou a peça de roupa que deseja vender? \n")
		leia (custo)

        v1 = (custo * 0.45) + custo
        v2 = (custo * 0.30) + custo
	
		se(custo < 50)
		{
			escreva ("A peça de roupa será vendida a $ \n", v1)
		}
		senao se(custo > 50)
		{
			escreva ("Esta peça de roupa será vendida a $ \n", v2)
		}
		
	}
}
