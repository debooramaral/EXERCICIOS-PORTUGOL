programa {
	funcao inicio() {
			
	escreva ("Campo Grande-MS com destino à Matinhos - PR, quanto eu vou gastar para ir com meu marido?\n")
	escreva ("Tendo em vista que vamos em um FIAT UNO, e a gasolina tem custado R$ 5,00.. \n\n")
	
	real a, b, resultado
	
	escreva ("Digite quantos KM é a distancia percorrida de ida? ")
	leia (a)
	escreva ("a distância é: ", a, "KM")
	
	escreva ("\n Digite quantos KM o carro faz com um litro? ")
	leia (b)
	escreva("a autonomia do carro é de: ", b, "KM")
	
    resultado = a/b * 5
	
	escreva ("\n O custo estimado da viagem: ", resultado)
	
		}
}


4.

programa {
	funcao inicio() {
		escreva ("\nTemos um caderno de desenho com tamanho de 30 cm. O professor de matemática pediu para Ellen dizer qual é a ÁREA DO RETANGULO desse caderno.\n")
		
		real altura, valor
		escreva ("\nSe o tamanho é 30 cm, podemos dizer que esta é a ~ Base ~")
		escreva ("\nInsira a altura do retangulo: ")
		leia (altura)
		
		valor = 30 * altura
		
		escreva ("\n\nPortanto a área do retangulo é de : ", valor, " CM²")
		
	}
}



5.

programa {
	funcao inicio() {
	    
	    real salario, vendas, comissao, final
		escreva ("Jorge tem um salario de R$ 1.100 e tem uma comissão de 4%.\n")
		
		escreva ("\nDigite o valor do salário no mês de setembro: $ ") 
		leia (salario)
		
		escreva ("\nTeve como Vendas, um total de: ")
		leia (vendas)
		
	    comissao = vendas * 0.04 
	    
	    escreva ("\nA comissão de Jorge é no valor de ", comissao, "$")
	    
	    final = comissao + salario
	    
	    escreva ("\n\nO valor do Salário FINAL de Jorge no mês é: ", final, "$")
	    
	    escreva ("\n\nATÉ BREVE")
	}
}



