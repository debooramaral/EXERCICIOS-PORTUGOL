1.

programa {
	funcao inicio() {
	escreva ("TRABALHANDO FELIZ\n")
	
	real numero
	
	escreva ("Qual foi o valor do seu salário: \n")
	leia (numero)
	
	se (numero <=2000 )
	{
	    escreva ("Você teve um AUMENTO DE 20% :D\n", numero)
	}
	senao
	{
	    escreva ("Você teve um AUMENTO DE 10% :) \n", numero)
	}
	escreva("\nFAÇA BOM PROVEITO $$\n")
	}
}

2.

programa {
	funcao inicio() {
    real numero
	escreva ("Insira um número abaixo ou acima de 0: \n")
	leia (numero)
	
	se (numero <=0)
	{
	    escreva("este número é NEGATIVO \n", numero)
	}
	senao 
	{
	    escreva("o número é POSITIVO \n", numero)
	}
	}
}


